{
  "name": "tdd-with-node-js-express",
  "version": "1.0.0",
  "description": "tdd with express",
  "main": "app.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --watch",
    "start": "cross-env NODE_ENV=development nodemon index",
    "lint": "eslint ."
  },
  "author": "Frederick Aziebu",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "config": "^3.3.9",
    "express": "^4.18.2",
    "express-validator": "^6.15.0",
    "i18next": "^22.4.13",
    "i18next-fs-backend": "^2.1.1",
    "i18next-http-middleware": "^3.3.0",
    "jsonwebtoken": "^9.0.0",
    "nodemailer": "^6.9.1",
    "sequelize": "^6.29.3",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "jest-watch-typeahead": "^2.2.2",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.6",
    "smtp-server": "^3.11.0",
    "supertest": "^6.3.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "eqeqeq": "warn",
      "prettier/prettier": "warn",
      "no-unused-vars": "warn",
      "no-empty": "warn"
    }
  },
  "prettier": {
    "singleQuote": false,
    "printWidth": 80
  },
  "jest": {
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "verbose": true
  }
}
